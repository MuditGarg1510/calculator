<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="normalButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/layoutWidthWeighted</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="lineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lineWidth</item>
        <item name="android:background">@color/lineColor</item>
    </style>
    <style name="lineVertical">
        <item name="android:background">@color/lineColor</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/lineWidth</item>
    </style>
    <style name="output">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
    </style>
    <style name="sideBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/sideBarWidth</item>
    </style>

</resources>
