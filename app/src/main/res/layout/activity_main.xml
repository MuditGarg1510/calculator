<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutWidthWeighted"
            android:layout_weight="1">

            <View
                style="@style/sideBar"/>

            <TextView
                android:id="@+id/input1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textSize="60sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <View
                style="@style/sideBar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutWidthWeighted"
            android:layout_weight="1">

            <View
                style="@style/sideBar"/>

            <TextView
                android:id="@+id/sign1"
                android:layout_width="@dimen/layoutWidthWeighted"
                android:layout_height="match_parent"
                style="@style/output"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/input2"
                android:layout_width="@dimen/layoutWidthWeighted"
                android:layout_height="match_parent"
                style="@style/output"
                android:layout_weight="4" />

            <View
                style="@style/sideBar"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:id="@+id/second_entering"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutWidthWeighted"
            android:layout_weight="1">

            <View
                style="@style/sideBar"/>

            <TextView
                android:id="@+id/sign2"
                android:layout_width="@dimen/layoutWidthWeighted"
                android:layout_height="match_parent"
                style="@style/output"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/input3"
                android:layout_width="@dimen/layoutWidthWeighted"
                android:layout_height="match_parent"
                android:layout_weight="4"
                style="@style/output"
                android:textSize="60sp" />

            <View
                style="@style/sideBar"/>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/lineHorizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutWidthWeighted"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/layoutWidthWeighted"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AC"
                style="@style/normalButton"
                android:text="AC"
                android:textColor="@color/orange" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number7"
                style="@style/normalButton"
                android:text="7" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number4"
                style="@style/normalButton"
                android:text="4" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number1"
                style="@style/normalButton"
                android:text="1" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/percentage"
                style="@style/normalButton"
                android:text="%" />
        </LinearLayout>

        <View style="@style/lineVertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backspace"
                style="@style/normalButton"
                android:layout_width="36dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_backspace_black_24dp" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number8"
                style="@style/normalButton"
                android:text="8" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number5"
                style="@style/normalButton"
                android:text="5" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number2"
                style="@style/normalButton"
                android:text="2" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number0"
                style="@style/normalButton"
                android:text="0" />
        </LinearLayout>

        <View style="@style/lineVertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/divide"
                style="@style/normalButton"
                android:text="/" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number9"
                style="@style/normalButton"
                android:text="9" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number6"
                style="@style/normalButton"
                android:text="6" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/number3"
                style="@style/normalButton"
                android:text="3" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/dot"
                style="@style/normalButton"
                android:text="." />
        </LinearLayout>

        <View style="@style/lineVertical" />

        <LinearLayout
            android:layout_width="@dimen/layoutWidthWeighted"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layoutWidthWeighted"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                app:srcCompat="@mipmap/ic_close_black_18dp" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/minus"
                style="@style/normalButton"
                android:text="-" />

            <View style="@style/lineHorizontal" />

            <TextView
                android:id="@+id/plus"
                style="@style/normalButton"
                android:text="+" />

            <View style="@style/lineHorizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineWidth"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layoutWidthWeighted"
                android:layout_weight="2"
                android:background="@color/orange"
                android:gravity="center_horizontal|center_vertical"
                android:text="="
                android:textColor="@color/white"
                android:textSize="@dimen/buttonTextSize" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
